<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.smartech.moviedatabase">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieDatabase"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.detailperson.DetailPersonActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieDatabase.NoActionBar" />
        <activity
            android:name=".activity.WebViewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieDatabase.NoActionBar" />
        <activity
            android:name=".activity.OnBoardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieDatabase.NoActionBar" />
        <activity
            android:name=".activity.detailtv.DetailTvActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieDatabase.NoActionBar" />
        <activity
            android:name=".activity.SearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieDatabase.NoActionBar" />
        <activity
            android:name=".activity.detailmovie.DetailMovieActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieDatabase.NoActionBar" />
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieDatabase.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>