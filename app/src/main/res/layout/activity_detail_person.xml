<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.detailperson.DetailPersonActivity">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/black"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_backdrop"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@color/black"
            android:tintMode="multiply"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:layout_margin="16dp"
            android:src="@drawable/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_backdrop"
            app:layout_constraintBottom_toBottomOf="@id/iv_backdrop"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_margin="16dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintTop_toTopOf="@id/iv_poster"
            app:layout_constraintLeft_toRightOf="@id/iv_poster"/>

        <TextView
            android:id="@+id/tv_text_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintLeft_toLeftOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/roboto_italic"
            app:layout_constraintLeft_toLeftOf="@id/tv_text_gender"
            app:layout_constraintTop_toBottomOf="@id/tv_text_gender"/>

        <TextView
            android:id="@+id/tv_text_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintLeft_toLeftOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_gender"/>

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/roboto_italic"
            app:layout_constraintLeft_toLeftOf="@id/tv_text_birthday"
            app:layout_constraintTop_toBottomOf="@id/tv_text_birthday"/>

        <TextView
            android:id="@+id/tv_text_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popularity"
            android:maxLines="1"
            android:textSize="14sp"
            android:layout_marginLeft="48dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintTop_toTopOf="@id/tv_text_gender"
        app:layout_constraintLeft_toRightOf="@id/tv_text_gender"/>

        <TextView
            android:id="@+id/tv_popularity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/roboto_italic"
            app:layout_constraintLeft_toLeftOf="@id/tv_text_popularity"
            app:layout_constraintTop_toBottomOf="@id/tv_text_popularity"/>

        <TextView
            android:id="@+id/tv_text_place_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Of Birth"
            android:maxLines="1"
            android:textSize="14sp"
            android:layout_marginLeft="48dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintTop_toTopOf="@id/tv_text_birthday"
            app:layout_constraintLeft_toRightOf="@id/tv_text_birthday"/>

        <TextView
            android:id="@+id/tv_place_of_birth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/roboto_italic"
            app:layout_constraintLeft_toLeftOf="@id/tv_text_place_of_birth"
            app:layout_constraintTop_toBottomOf="@id/tv_text_place_of_birth"/>

        <TextView
            android:id="@+id/tv_text_biography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biography"
            android:maxLines="1"
            android:layout_margin="12dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_backdrop"/>

        <TextView
            android:id="@+id/tv_biography"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:textSize="16sp"
            android:textColor="@color/light_black"
            android:fontFamily="@font/roboto_italic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_text_biography"/>

        <TextView
            android:id="@+id/tv_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Known For"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_biography"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/credits_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginVertical="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_credits">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_credits_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>